<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="3">

    <!-- Barra laterale -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#232196F3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSidebarTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C92196F3"
            android:padding="16dp"
            android:text="STATO"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Login"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/item_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Welcome"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/item_waiting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Waiting"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/item_ordering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Ordering"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/item_serving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Serving"
            android:typeface="monospace"/>

        <TextView
            android:id="@+id/item_attesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Attesa"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/item_chatBot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="ChatBot"
            android:typeface="monospace"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="#A1673AB7"/>

        <TextView
            android:id="@+id/item_farewelling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Farewelling"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/item_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Signup"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/item_interview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Interview"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/item_outofsight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Out Of Sight"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/item_gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Gone"
            android:typeface="monospace"/>

    </LinearLayout>

    <RelativeLayout
        android:background="#FFFFFF"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="380dp"
            android:layout_height="350dp"
            android:contentDescription="Logo"
            android:layout_centerHorizontal="true"
            android:src="@drawable/pic6chat" />

        <TextView
            android:id="@+id/textDomanda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView6"
            android:layout_marginTop="3dp"
            android:padding="16dp"
            android:text="QUI DOMANDA"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonOption1"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textDomanda"
            android:layout_marginTop="30dp"
            android:foregroundTint="#FFFFFF"
            android:text="Risposta 1"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonOption2"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonOption1"
            android:layout_marginTop="10dp"
            android:foregroundTint="#FFFFFF"
            android:text="Risposta 1"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonOption3"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonOption2"
            android:layout_marginTop="10dp"
            android:foregroundTint="#FFFFFF"
            android:text="Risposta 1"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:textSize="20sp" />
        <!-- Timer display -->
        <ProgressBar
            android:id="@+id/timerProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonOption3"
            android:layout_marginTop="60dp"
            android:progress="100"
            android:max="100" />

        <!-- Score display -->
        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timerProgressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Score: 0" />

    </RelativeLayout>
</LinearLayout>
